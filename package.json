{
  "name": "ngx-foldable",
  "version": "0.0.0",
  "description": "Angular library to help you build dual-screen experiences for foldable or dual-screen devices",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:lib": "npm run -s copy:assets && ng build --prod",
    "build:demo": "ng build --prod demo",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "copy:assets": "cp README.md LICENSE projects/lib/",
    "docs:serve": "compodoc -p projects/lib/tsconfig.lib.json projects/lib/src/core -d dist/docs -s -w -r 4210 -o --disable-internal",
    "docs:build": "compodoc -p projects/lib/tsconfig.lib.json projects/lib/src/core -d dist/docs"
  },
  "keywords": [
    "angular",
    "foldable",
    "library",
    "surface",
    "multi-screen",
    "dual-screen",
    "components",
    "helper"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sinedied/ngx-foldable.git"
  },
  "author": {
    "name": "Yohan Lasorsa",
    "url": "https://twitter.com/sinedied"
  },
  "homepage": "https://github.com/sinedied/ngx-foldable",
  "bugs": {
    "url": "https://github.com/sinedied/ngx-foldable/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@angular/animations": "~11.1.1",
    "@angular/common": "~11.1.1",
    "@angular/compiler": "~11.1.1",
    "@angular/core": "~11.1.1",
    "@angular/forms": "~11.1.1",
    "@angular/platform-browser": "~11.1.1",
    "@angular/platform-browser-dynamic": "~11.1.1",
    "@angular/router": "~11.1.1",
    "rxjs": "~6.6.0",
    "spanning-css-polyfill": "^2.0.1",
    "tslib": "^2.0.0",
    "windowsegments-polyfill": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1101.2",
    "@angular/cli": "~11.1.2",
    "@angular/compiler-cli": "~11.1.1",
    "@compodoc/compodoc": "^1.1.11",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.2.3",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^11.1.2",
    "protractor": "~7.0.0",
    "semantic-release-npm-github": "^1.0.4",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.2"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "compodoc": {
    "hideGenerator": true,
    "disableInternal": true,
    "disablePrivate": true,
    "disableCoverage": true,
    "disableDependencies": true
  },
  "release": {
    "extends": "semantic-release-npm-github",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            { "type": "chore", "release": "patch" },
            { "type": "docs", "release": "patch" },
            { "type": "refactor", "release": "patch" },
            { "type": "style", "release": "patch" }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist/ngx-foldable",
          "tarballDir": ".package"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json",
            "CHANGELOG.md",
            "README.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      [
        "@semantic-release/github",
        { "assets": ".package/*.tgz" }
      ]
    ],
    "branches": "main"
  }
}
